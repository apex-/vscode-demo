    "version": "0.2.0",
    "configurations": [
        {   "cwd": "${workspaceFolder}/scrape-api",
            "name": "Python: Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "command": "uvicorn main:app --reload",
            "name": "Run Backend (Uvicorn)",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Python: Aktuelle Datei",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
    ]
}